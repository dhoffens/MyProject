<h1> <%= @concert.artist %> </h1>

<h2> Details </h2>

<%= @concert.venue %>,
<%= @concert.city %>.
<br>
<%= @concert.date %>.
<br>
$<%= @concert.price %>.
<br>
<%= @concert.description %>


<h3> Comments </h3>

<% if @comments %>
	<% @comments.each do |x| %>
	<%= x.name %> -  
	<%= x.comment %>
	<br>
	<% end %>
<% end %>


<h3> Add comments </h3>

<%= form_for [@concert, @new_comment] do |f| %>
<%= f.label :name %>
<%= f.text_field :name, required: true, class: "box" %>
<br>
<%= f.label :comment %>
<%= f.text_field :comment, required: true, class: "box" %>
<br>
<%= f.submit %>
<% end %>

